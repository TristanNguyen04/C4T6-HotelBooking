generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  name String?
  bookings Booking[]
  createdAt DateTime @default(now())
  isVerified Boolean @default(false)
  verificationToken String?
}

model Booking {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  hotelId String
  hotelName String
  roomKey String
  roomDescription String
  roomImage String?
  specialRequest String?
  primaryGuestTitle String
  primaryGuestFirstName String
  primaryGuestLastName String
  primaryGuestPhoneNumber String
  checkin DateTime
  checkout DateTime
  guests String
  adults Int
  rooms Int
  children Int
  childrenAges Int[]
  price Float
  currency String
  baseRateInCurrency Float
  includedTaxesAndFeesInCurrency Float
  excludedTaxesAndFeesInCurrency Float
  createdAt DateTime @default(now())
  stripeSessionId String
}
