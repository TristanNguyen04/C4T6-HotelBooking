generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  name String?
  bookings Booking[]
  createdAt DateTime @default(now())
  isVerified Boolean @default(false)
  verificationToken String?
}

model Booking {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String
  hotelId String
  hotelName String
  checkin DateTime
  checkout DateTime
  guests String
  price Float
  currency String
  createdAt DateTime @default(now())
  stripeSessionId String
}
