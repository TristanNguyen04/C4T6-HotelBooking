{
  "name": "hotel-booking-app",
  "version": "1.0.0",
  "description": "Hotel Booking Application with Client and Server",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd apps/client && npm run dev",
    "dev:server": "cd apps/server && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd apps/client && npm run build",
    "build:server": "cd apps/server && npm run build",
    "install:all": "npm install && cd apps/client && npm install && cd ../server && npm install"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/google.maps": "^3.58.1",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "jest": "^30.0.4",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@react-google-maps/api": "^2.20.7",
    "@stripe/stripe-js": "^7.4.0",
    "@tailwindcss/vite": "^4.1.11",
    "@vis.gl/react-google-maps": "^1.5.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "stripe": "^18.2.1"
  }
}
